# Font Configuration
font-size = 12

# Window Configuration
window-decoration = false
window-padding-x = 12
window-padding-y = 12
background-opacity = 1.0
background-blur-radius = 32

# Cursor Configuration
cursor-style = block
cursor-style-blink = true

# Scrollback
scrollback-limit = 3023

# Terminal features
mouse-hide-while-typing = true
copy-on-select = false
confirm-close-surface = false

# Disable annoying copied to clipboard
app-notifications = no-clipboard-copy,no-config-reload

# Key bindings for common actions
#keybind = ctrl+c=copy_to_clipboard
#keybind = ctrl+v=paste_from_clipboard
keybind = ctrl+shift+n=new_window
keybind = ctrl+t=new_tab
keybind = ctrl+plus=increase_font_size:1
keybind = ctrl+minus=decrease_font_size:1
keybind = ctrl+zero=reset_font_size

# Material 3 UI elements
unfocused-split-opacity = 0.7
unfocused-split-fill = #44464f

# Tab configuration
gtk-titlebar = false

# Shell integration
shell-integration = detect
shell-integration-features = cursor,sudo,title,no-cursor
keybind = shift+enter=text:\n

# Rando stuff
gtk-single-instance = true

# Dank color generation
config-file = ./config-dankcolors


# tmux

# Split panes
# tmux: Ctrl+b % (vertical split)
keybind = ctrl+b>shift+5=new_split:right

# tmux: Ctrl+b " (horizontal split)
keybind = ctrl+b>shift+apostrophe=new_split:down

# Navigate between panes
# tmux: Ctrl+b arrow keys
keybind = ctrl+b>left=goto_split:left
keybind = ctrl+b>right=goto_split:right
keybind = ctrl+b>up=goto_split:top
keybind = ctrl+b>down=goto_split:bottom

# tmux: Ctrl+b o (next pane)
keybind = ctrl+b>o=goto_split:next

# Resize panes
# tmux: Ctrl+b Ctrl+arrow keys
keybind = ctrl+b>ctrl+left=resize_split:left,10
keybind = ctrl+b>ctrl+right=resize_split:right,10
keybind = ctrl+b>ctrl+up=resize_split:up,10
keybind = ctrl+b>ctrl+down=resize_split:down,10

# Close pane
# tmux: Ctrl+b x
keybind = ctrl+b>x=close_surface

# Tab operations (equivalent to tmux windows)
# tmux: Ctrl+b c (new window)
keybind = ctrl+b>c=new_tab

# tmux: Ctrl+b n (next window)
keybind = ctrl+b>n=next_tab

# tmux: Ctrl+b p (previous window)
keybind = ctrl+b>p=previous_tab

# tmux: Ctrl+b [1-9] (go to window number)
keybind = ctrl+b>one=goto_tab:1
keybind = ctrl+b>two=goto_tab:2
keybind = ctrl+b>three=goto_tab:3
keybind = ctrl+b>four=goto_tab:4
keybind = ctrl+b>five=goto_tab:5
keybind = ctrl+b>six=goto_tab:6
keybind = ctrl+b>seven=goto_tab:7
keybind = ctrl+b>eight=goto_tab:8
keybind = ctrl+b>nine=goto_tab:9

# Close tab
# tmux: Ctrl+b &
keybind = ctrl+b>shift+7=close_tab

# Toggle pane zoom (fullscreen)
# tmux: Ctrl+b z
keybind = ctrl+b>z=toggle_split_zoom
